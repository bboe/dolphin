<div class="col-md-6 col-ms-12">
  <h3>Top <%= name %></h3>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Person</th>
        <th>Received</th>
        <th>Sent</th>
      </tr>
    </thead>

    <tbody>
      <% list.each do |user| %>
        <tr>
          <td><%= display_user(user) %></td>
          <td><%= user.to_count %></td>
          <td><%= user.from_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
